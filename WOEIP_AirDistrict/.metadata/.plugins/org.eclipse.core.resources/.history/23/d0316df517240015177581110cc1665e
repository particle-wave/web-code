def getTable(html):
    tableStart = html.find("<table class=\"gate1\" border=\"0\" cellpadding=\"3\" cellspacing=\"1\">")
    #cut everything until tableStart
    html = html[tableStart:]
    tableEnd = html.find("</table>") + len(" </table>") + 1
    return html
#[:tableEnd]

